<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<div>
  <%= link_to 'New Task', new_task_path %>
</div>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Interval (seconds)</th>
      <th>League</th>
      <th>status</th>
      <th>PID</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, edit_task_path(task) %></td>
        <td><%= task.interval %></td>
        <td><%= task.league_name %></td>
        <td><%= task.status %></td>
        <td><%= task.pid %></td>
        <td>
          <%= link_to 'Start', start_task_path(task), method: :put, class: 'btn btn-primary' %>
          <%= link_to 'Stop', stop_task_path(task), method: :put, class: 'btn btn-warning' %>
          <%= link_to 'Delete', task_path(task), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
